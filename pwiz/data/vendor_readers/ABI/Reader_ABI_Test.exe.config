<?xml version ="1.0"?>
<configuration>
    
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections> 

  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="2.0" /> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  
  <log4net>  
    <appender name="DevelopmentLogAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log\DataAPI.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="5MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="Header" value="--- log started --- " />
        <param name="Footer" value="--- log stopped --- " />
        <conversionPattern value="[%date{HH:mm:ss,fff}] %thread [%-5level] %logger{2} - %message%newline" />
      </layout>
    </appender>
    <logger name="Clearcore2">
      <level value="INFO" />
      <appender-ref ref="DevelopmentLogAppender" />
    </logger>
    <root>
      <level value="WARN" />
      <appender-ref ref="DevelopmentLogAppender" />
    </root>
  </log4net>

</configuration> 
