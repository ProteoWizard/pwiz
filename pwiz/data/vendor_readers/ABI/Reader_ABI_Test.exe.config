<?xml version ="1.0"?>
<configuration>
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="2.0" /> 
    <supportedRuntime version="4.0" /> 
  </startup>
    
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  
  <log4net>
    <appender name="SciexLogAppender" type="OFX.Logging.Log4Net.Async.AsyncRollingFileAppender, OFX.Logging">
      <file value="C:\ProgramData\SCIEX\Logs\Reader_ABI_Test.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <preserveLogFileNameExtension value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="Header" value="--- log started ---" />
        <param name="Footer" value="--- log stopped ---" />
        <conversionPattern value="[%date{dd-MM-yyyy HH:mm:ss,fff}] %thread [%-5level] %logger{2} - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO"/>
      <appender-ref ref="SciexLogAppender" />
    </root>
  </log4net>
</configuration> 
