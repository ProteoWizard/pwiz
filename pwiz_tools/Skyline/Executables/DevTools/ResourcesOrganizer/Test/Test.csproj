<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="ResourcesFileTest\Resources.ja.resx.testfile" />
    <None Remove="ResourcesFileTest\Resources.resx.testfile" />
    <None Remove="ResourcesFileTest\Resources.zh-CHS.resx.testfile" />
    <None Remove="ResourcesFileTest\Skyline.resx.testfile" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="ResourcesFileTest\Resources.ja.resx.testfile">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ResourcesFileTest\Resources.resx.testfile">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ResourcesFileTest\Resources.zh-CHS.resx.testfile">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ResourcesFileTest\Skyline.resx.testfile" />
